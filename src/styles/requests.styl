.request-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 1000px;
  max-height: 1200px;
  margin: 0 auto;
  justify-content: center;


  h2 {
    margin: 40px auto;
    font-size: 50px;
    color: grey;
    font-family: "Franklin Gothic Book";
  }

  &__img {
    max-width: 800px;
    max-height: 700px;
  }

  .card {
    padding: 20px;
    border: 1px solid #A67458;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 800px;
    height: 700px;
    margin: 0 auto;
    justify-content: center;
    overflow: hidden;
    background-color: rgba(223, 229, 229, 0.09);
  }

  .mySwiper {
    width: 1000px;
    margin: 0 auto;
  }
}